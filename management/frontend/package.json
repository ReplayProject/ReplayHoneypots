{
    "name": "replay-frontend",
    "license": "GNU GPLv3",
    "version": "0.0.1",
    "description": "A tiny VueJS app bundled using ParcelJS && Pouch Database & Frontend",
    "main": "index.html",
    "scripts": {
        "build": "parcel build ./client/index.html --no-source-maps --public-url 'http://10.11.12.125:8080' ",
        "build-watch": "parcel watch ./client/index.html --public-url 'http://10.11.12.125:8080' ",
        "generate-lock": "npm i --package-lock-only",
        "dev": "concurrently --kill-others \"npm run start-watch\" \"npm run build-watch\"",
        "dev2": "concurrently --kill-others \"npm run start-serve\" \"npm run build-watch\"",
        "format": "prettier --list-different --write \"test/**\" \"server/**\" \"client/**\" \"./**.{json, babelrc}\" \"!.cache\" && sort-package-json",
        "start": "NODE_ENV=development npm run build && DEBUG_HIDE_DATE=true DEBUG=sd:*,-sd:history node -r dotenv/config server/index.js",
        "start-serve": "DEBUG_HIDE_DATE=true DEBUG=sd:*,-sd:history node -r dotenv/config server/index.js",
        "start-watch": "DEBUG_HIDE_DATE=true DEBUG=sd:*,-sd:history nodemon -r dotenv/config --ignore config.json server/index.js",
        "test": "nyc ava test/specs/*"
    },
    "nodemonConfig": {
        "ignore": [
            "dist/*",
            "dist"
        ]
    },
    "browserslist": [
        "last 1 Chrome version"
    ],
    "ava": {
        "require": [
            "./test/_setup.js"
        ]
    },
    "nyc": {
        "extension": [
            ".js",
            ".vue"
        ]
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "concurrently": "^5.2.0",
        "connect-ensure-login": "^0.1.1",
        "connect-history-api-fallback": "^1.6.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "deasync": "^0.1.20",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "helmet": "^4.0.0",
        "memdown": "^5.1.0",
        "node-gyp": "^7.0.0",
        "nodemon": "^2.0.4",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "pouchdb": "^7.2.1",
        "serve-static": "^1.14.1"
    },
    "devDependencies": {
        "@babel/core": "7.11.1",
        "@babel/plugin-transform-runtime": "^7.10.3",
        "@babel/runtime": "^7.10.3",
        "@saeris/vue-spinners": "^1.0.8",
        "@vue/component-compiler-utils": "^3.1.2",
        "@vue/test-utils": "^1.0.3",
        "ava": "^3.9.0",
        "axios": "^0.19.2",
        "babel-polyfill": "^6.26.0",
        "chart.js": "^2.9.3",
        "jsdom": "^16.2.2",
        "jsdom-global": "^3.0.2",
        "luxon": "^1.24.1",
        "nyc": "^15.1.0",
        "parcel-bundler": "^1.12.4",
        "pouch-vue": "^0.3.5",
        "pouchdb-browser": "^7.2.1",
        "pouchdb-find": "^7.2.1",
        "pouchdb-live-find": "^0.4.0",
        "require-extension-hooks": "^0.3.3",
        "require-extension-hooks-babel": "^1.0.0",
        "require-extension-hooks-vue": "^3.0.0",
        "sass": "^1.26.8",
        "sinon": "^9.0.2",
        "sort-package-json": "^1.44.0",
        "supports-color": "^7.1.0",
        "tachyons": "^4.12.0",
        "vue": "^2.6.11",
        "vue-axios": "^2.1.5",
        "vue-chartjs": "^3.5.0",
        "vue-datetime": "^1.0.0-beta.13",
        "vue-good-table": "^2.19.3",
        "vue-hot-reload-api": "^2.3.4",
        "vue-json-pretty": "^1.6.3",
        "vue-progressbar": "^0.7.5",
        "vue-router": "^3.3.4",
        "vue-template-compiler": "^2.6.11",
        "vue-toasted": "^1.1.28",
        "vuejs-datatable": "^2.0.0-alpha.7",
        "vuex": "^3.4.0",
        "weekstart": "^1.0.1"
    },
    "engines": {
        "node": "v12.0.0"
    }
}
